<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.geomajas</groupId>
		<artifactId>geomajas-client-gwt-plugin-all</artifactId>
		<version>1.15.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.geomajas.plugin</groupId>
	<artifactId>geomajas-client-gwt-widget-searchandfilter-all</artifactId>
	<packaging>pom</packaging>
	<name>geomajas-widget-searchandfilter plug-in parent</name>
	<description>geomajas-widget-searchandfilter plug-in grouping module</description>

	<developers>
		<developer>
			<id>oliverm</id>
			<name>Oliver May</name>
			<email>oliver.may@dfc.be</email>
			<roles>
				<role>Module maintainer</role>
			</roles>
		</developer>
		<developer>
			<id>anb</id>
			<name>An Buyle</name>
			<email>an.buyle@dfc.be</email>
		</developer>
		<developer>
			<id>kristofh</id>
			<name>Kristof Heirwegh</name>
			<email>kristof.heirwegh@dfc.be</email>
		</developer>
	</developers>

	<dependencyManagement>
		<dependencies>
            <dependency>
                <groupId>org.geomajas.plugin</groupId>
                <artifactId>geomajas-server-layer-wms-all</artifactId>
                <version>${gwt-client-server-version}</version>
            </dependency>
			<dependency>
				<groupId>org.geomajas.widget</groupId>
				<artifactId>geomajas-widget-searchandfilter</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas.widget</groupId>
				<artifactId>geomajas-widget-searchandfilter-gwt</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas.widget</groupId>
				<artifactId>geomajas-widget-featureinfo</artifactId>
				<version>${project.version}</version>
			</dependency>			
			<dependency>
				<groupId>org.geomajas.widget</groupId>
				<artifactId>geomajas-widget-featureinfo-gwt</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.springframework</groupId>
				<artifactId>spring-core</artifactId>
				<version>3.0.5.RELEASE</version>
			</dependency>
			<dependency>
				<groupId>org.springframework.security</groupId>
				<artifactId>spring-security-web</artifactId>
				<version>3.0.5.RELEASE</version>
			</dependency>
		</dependencies>

	</dependencyManagement>
	
	<modules>
		<module>searchandfilter</module>
		<module>searchandfilter-gwt</module>
		<module>searchandfilter-gwt-example</module>
	</modules>

	<profiles>
		<profile>
			<id>documentation</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>documentation</module>
			</modules>
		</profile>
		<profile>
			<id>skipDocs</id>
			<activation>
				<property>
					<name>skipDocs</name>
				</property>
			</activation>
		</profile>
		<profile>
			<id>m2e</id>
			<activation>
				<property>
					<name>m2e.version</name>
				</property>
			</activation>
		</profile>
	</profiles>
</project>
