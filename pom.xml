	<modules>
<!--
		<module>geomajas-client-common-gwt-smartgwt</module>
-->
		<module>geomajas-client-gwt-plugin-parent</module>
		<module>geomajas-client-gwt-smartgwt-archetype</module>
		<module>geomajas-face-gwt-documentation</module>
		<module>geomajas-gwt-archetype</module>
		<module>geomajas-gwt-client</module>
		<module>geomajas-gwt-example-base</module>
		<module>geomajas-gwt-face-example</module>
		<module>geomajas-gwt-face-example-jar</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-gwt-client</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-gwt-client</artifactId>
				<classifier>sources</classifier>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-gwt-example-base</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-gwt-face-example-jar</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-gwt-face-example</artifactId>
				<version>${project.version}</version>
				<type>war</type>
			</dependency>

			<dependency>
				<groupId>org.geomajas.project</groupId>
				<artifactId>geomajas-project-server</artifactId>
				<version>${gwt-client-server-version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-face-common-gwt-parent</artifactId>
				<version>${gwt-client-common-gwt-version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>org.geomajas</groupId>
				<artifactId>geomajas-client-common-gwt-parent</artifactId>
				<version>${gwt-client-common-gwt-version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>

			<dependency>
				<groupId>com.google.gwt</groupId>
				<artifactId>gwt-user</artifactId>
				<version>${gwt-client-gwt-version}</version>
			</dependency>
			<dependency>
				<groupId>com.google.gwt</groupId>
				<artifactId>gwt-servlet</artifactId>
				<version>${gwt-client-gwt-version}</version>
			</dependency>
			<dependency>
				<groupId>com.google.gwt</groupId>
				<artifactId>gwt-dev</artifactId>
				<version>${gwt-client-gwt-version}</version>
			</dependency>

			<dependency>
				<groupId>com.smartgwt</groupId>
				<artifactId>smartgwt</artifactId>
				<version>${gwt-client-smartgwt-version}</version>
			</dependency>
			<dependency>
				<groupId>com.smartgwt</groupId>
				<artifactId>smartgwt-skins</artifactId>
				<version>${gwt-client-smartgwt-version}</version>
			</dependency>

			<!-- newer versions for selenium -->
			<dependency>
				<groupId>commons-codec</groupId>
				<artifactId>commons-codec</artifactId>
				<version>1.7</version>
			</dependency>
			<dependency>
				<groupId>org.apache.httpcomponents</groupId>
				<artifactId>httpclient</artifactId>
				<version>4.2.2</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<profiles>
		<profile>
			<id>default</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>geomajas-client-gwt-smartgwt-archetype-documentation</module>
				<module>geomajas-face-gwt-documentation</module>
			</modules>
		</profile>
		<profile>
			<id>skipDocs</id>
			<activation>
				<property>
					<name>skipDocs</name>
				</property>
			</activation>
		</profile>
		<profile>
			<id>m2e</id>
			<activation>
				<property>
					<name>m2e.version</name>
				</property>
			</activation>
		</profile>
	</profiles>

	<properties>
		<gwt-client-server-version>1.14.0-SNAPSHOT</gwt-client-server-version>
		<gwt-client-gwt-version>2.5.1</gwt-client-gwt-version>
		<gwt-client-gwt-maven-version>2.5.1</gwt-client-gwt-maven-version>
		<gwt-client-common-gwt-version>2.0.0-SNAPSHOT</gwt-client-common-gwt-version>
		<gwt-client-smartgwt-version>3.1</gwt-client-smartgwt-version>
	</properties>
	
</project>
